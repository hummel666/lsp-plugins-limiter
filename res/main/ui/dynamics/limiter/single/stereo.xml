<plugin resizable="true">
	<vbox>
		<grid rows="2" cols="5" transpose="true" hspacing="2" vspacing="2" expand="true">
			<!-- Time graph -->
			<graph width.min="560" height.min="280" expand="true">
				<origin hpos="1" vpos="-1" visible="false" />
				
				<!-- Gray grid -->
				<marker v="-12 db" ox="1" oy="0" color="graph_alt_1" />
				<marker v="-36 db" ox="1" oy="0" color="graph_alt_1" />
				<marker v="-60 db" ox="1" oy="0" color="graph_alt_1" />
				<ui:for id="t" first="0" last="3">
					<marker v="${t}.5" ox="0" oy="1" color="graph_alt_1" />
				</ui:for>
				<!-- Yellow grid -->
				<marker v="-24 db" ox="1" oy="0" color="graph_sec" />
				<ui:for id="t" first="1" last="3">
					<marker v="${t}" ox="0" oy="1" color="graph_sec" />
				</ui:for>

				<!-- Axes -->
				<axis min="0" max="4" color="graph_prim" angle="1.0" log="false" />
				<axis min="-48 db" max="0 db" color="graph_prim" angle="0.5" log="true" />
				<marker value="4" color="graph_prim" />
				
				<!-- Baseline -->
				<marker v="0 db" ox="1" oy="0" color="graph_prim" width="2" />
				
				<!-- Meshes -->
				<mesh id="ig_l" width="2" color="left_channel_in" visibility=":igv_l" />
				<mesh id="ig_r" width="2" color="right_channel_in" visibility=":igv_r" />
				<mesh id="og_l" width="2" color="left_channel" visibility=":ogv_l" />
				<mesh id="og_r" width="2" color="right_channel" visibility=":ogv_r" />
				<mesh id="scg_l" width="2" color="bright_green" visibility=":scgv_l" />
				<mesh id="scg_r" width="2" color="bright_green" visibility=":scgv_r" />
				<mesh id="grg_l" width="2" color="bright_blue" visibility=":grgv_l" />
				<mesh id="grg_r" width="2" color="bright_blue" visibility=":grgv_r" />
				
				<!-- Markers -->
				<marker id="th" color="magenta" basis="1" parallel="0" />
				
				<!-- Text -->
				<ui:attributes x="4" halign="1" valign="-1">
					<text y="0 db" text="graph.values.x:db" text:value="0" />
					<text y="-12 db" text="-12" />
					<text y="-24 db" text="-24" />
					<text y="-36 db" text="-36" />
					<text y="-48 db" text="graph.units.s" valign="1" />
				</ui:attributes>
				<ui:for id="t" first="0" last="3">
					<text x="${t}" y="-48 db" text="${t}" halign="-1" valign="1" />
					<text x="${t}.5" y="-48 db" text="${t}.5" halign="-1" valign="1" />
				</ui:for>
			</graph>
			
			<!-- Graph buttons -->
			<hbox spacing="4">
				<button id="alr" size="16" color="yellow" led="true" />
				<label text="labels.alr" />
				<button id="pause" size="16" color="green" led="true" />
				<label text="labels.pause" />
				<button id="clear" size="16" color="red" led="true" />
				<label text="labels.clear" />
				<align hpos="0.5" expand="true">
					<hbox spacing="4" fill="false">
						<label text="labels.mode:" />
						<combo id="mode" />
						<label text="labels.Over_Sampling:" />
						<combo id="ovs" />
						<label text="labels.dither:" />
						<combo id="dith" />
					</hbox>
				</align>
				<label text="labels.graphs.time" />
			</hbox>
			
			<!-- Sidechain meters -->				
			<vbox>
				<grid rows="2" cols="2">
					<label text="labels.chan.L_eft" font.size="8" />
					<label text="labels.chan.R_ight" font.size="8" />
					<button id="scgv_l" size="10" color="bright_green" led="true" />
					<button id="scgv_r" size="10" color="bright_green" led="true" />
				</grid>
				<ledmeter vexpand="true" height.min="256" angle="1">
					<ledchannel id="sclm_l" min="-48 db" max="0 db" log="true" type="peak"
						activity=":scgv_l" value.color="bright_green" />
					<ledchannel id="sclm_r" min="-48 db" max="0 db" log="true" type="peak"
						activity=":scgv_r" value.color="bright_green" />
				</ledmeter>
			</vbox>
			<label text="labels.sc.SC" />
			
			<!-- Gain meters -->				
			<vbox>
				<grid rows="2" cols="2">
					<label text="labels.chan.L_eft" font.size="8" />
					<label text="labels.chan.R_ight" font.size="8" />
					<button id="grgv_l" size="10" color="bright_blue" led="true" />
					<button id="grgv_r" size="10" color="bright_blue" led="true" />
				</grid>
				<ledmeter vexpand="true" height.min="256" angle="1">
					<ledchannel id="grlm_l" min="-48 db" max="0 db" log="true"
						balance="0 db" balance.visibility="true" type="peak"
						activity=":grgv_l" value.color="bright_blue" />
					<ledchannel id="grlm_r" min="-48 db" max="0 db" log="true"
						balance="0 db" balance.visibility="true" type="peak"
						activity=":grgv_r" value.color="bright_blue" />
				</ledmeter>
			</vbox>
			<label text="labels.gain_" />
			
			<!-- Input signal meters -->
			<vbox>
				<grid rows="2" cols="2">
					<label text="labels.chan.L_eft" font.size="8" />
					<label text="labels.chan.R_ight" font.size="8" />
					<button id="igv_l" size="10" color="left_channel" led="true" />
					<button id="igv_r" size="10" color="right_channel" led="true" />
				</grid>
				<ledmeter vexpand="true" height.min="256" angle="1">
					<ledchannel id="ilm_l" min="-48 db" max="0 db" log="true" type="rms_peak"
						peak.visibility="true" 
						activity=":igv_l" value.color="left_channel" />
					<ledchannel id="ilm_r" min="-48 db" max="0 db" log="true" type="rms_peak"
						peak.visibility="true" 
						activity=":igv_r" value.color="right_channel" />
				</ledmeter>
			</vbox>
			<label text="labels.chan.in" />
			
			<!-- Output signal meters -->
			<vbox>
				<grid rows="2" cols="2">
					<label text="labels.chan.L_eft" font.size="8" />
					<label text="labels.chan.R_ight" font.size="8" />
					<button id="ogv_l" size="10" color="left_channel" led="true" />
					<button id="ogv_r" size="10" color="right_channel" led="true" />
				</grid>
				<ledmeter vexpand="true" height.min="256" angle="1">
					<ledchannel id="olm_l" min="-48 db" max="0 db" log="true" type="rms_peak"
						peak.visibility="true" 
						activity=":ogv_l" value.color="left_channel" />
					<ledchannel id="olm_r" min="-48 db" max="0 db" log="true" type="rms_peak"
						peak.visibility="true" 
						activity=":ogv_r" value.color="right_channel" />
				</ledmeter>
			</vbox>
			<label text="labels.chan.out" />
		</grid>
		<hbox spacing="4">
			<!-- ALR -->
			<group text="groups.alr">
				<grid rows="3" cols="3">
					<label text="labels.attack" />
					<label text="labels.release" />
					<label text="labels.knee" />
					
					<knob id="alr_at" />
					<knob id="alr_rt" />
					<knob id="knee" />
					
					<value id="alr_at" />
					<value id="alr_rt" />
					<value id="knee" />
				</grid>
			</group>
			
			<!-- Limiter setup -->
			<group text="groups.plug.limiter">
				<grid rows="3" cols="6">
					<label text="labels.sc.sc_preamp" />
					<label text="labels.sc.lookahead" />
					<label text="labels.threshold" />
					<label text="labels.attack" />
					<label text="labels.release" />
					<label text="labels.stereo_link" />
					
					<knob id="scp" />
					<knob id="lk" />
					<knob id="th" scale_color="magenta" />
					<knob id="at" />
					<knob id="rt" />
					<knob id="slink" scale_color="green" />
					
					<hbox fill="false">
						<vbox fill="false" visibility="ex :extsc">
							<button id="extsc" size="12" color="green" led="true" />
							<label text="labels.sc.Ext_ernal" font.size="8" />
						</vbox>
						<value id="scp" />
						<label text="  " visibility="ex :extsc"/>
					</hbox>
					<value id="lk" />
					<hbox fill="false">
						<vbox fill="false">
							<button id="boost" size="12" color="green" led="true" />
							<label text="labels.boost_" font.size="8" />
						</vbox>
						<value id="th" />
						<label text="  " />
					</hbox>
					<value id="at" />
					<value id="rt" />
					<value id="slink" />
				</grid>
			</group>
			
			<!-- Signal control -->
			<group text="groups.signal">
				<grid rows="3" cols="2">
					<label text="labels.input" />
					<label text="labels.output" />
					
					<knob id="g_in" />
					<knob id="g_out" />
					
					<value id="g_in" />
					<value id="g_out" />
				</grid>
			</group>
		</hbox>
	</vbox>
</plugin>